<%- model_class = Professor -%>
<div class="page-header">
  <h1>Cargas Docente</h1>
</div>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Docente</th>
      <th>Periodo</th>
      <th>Carrera</th>
      <th>Fecha de creaci&oacute;n</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @professors.each_with_index do |professor, i| %>
      <tr>
        <td scope="row"><%= i + 1 %></td>
        <td><%= link_to full_name(professor.teacher), professor_path(professor) %></td>
        <td><%= full_period(professor.calendar) %></td>
        <td><%= professor.career.name %></td>
        <td><%= professor.created_at.to_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_professor_path(professor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      professor_path(professor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_professor_path,
            :class => 'btn btn-primary' %>
