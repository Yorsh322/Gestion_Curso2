<%= form_for @subject, :html => { :class => "form-horizontal subject" } do |f| %>

  <% if @subject.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@subject.errors.count, "error") %> prohibited this subject from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @subject.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nombre) %>
  </div>
  <div class="form-group">
    <%= f.label :clave, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :clave, :class => 'form-control' %>
    </div>
    <%=f.error_span(:clave) %>
  </div>

  <div class="form-group">
    <label class="control-label col-lg-2">Horas Te&oacute;ricas</label>
    <div class="col-lg-10">
      <%= f.number_field :teorica, :class => 'form-control' %>
    </div>
    <%=f.error_span(:teorica) %>
  </div>
    <div class="form-group">
      <label class="control-label col-lg-2">Horas Pr&aacute;cticas</label>
      <div class="col-lg-10">
        <%= f.number_field :practica, :class => 'form-control' %>
      </div>
      <%=f.error_span(:practica) %>
    </div>
  <div class="form-group">
    <label class="control-label col-lg-2">Cr&eacute;ditos</label>
    <div class="col-lg-10">
      <%= f.number_field :credito, :class => 'form-control' %>
    </div>
    <%=f.error_span(:credito) %>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-2">Caracterizaci&oacute;n</label>
    <div class="col-lg-10">
      <%= f.text_area :caracterizacion, :class => 'form-control ckeditor' %>
    </div>
    <%=f.error_span(:caracterizacion) %>
  </div>
  <div class="form-group">
    <%= f.label :objetivo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :objetivo, :class => 'form-control ckeditor' %>
    </div>
    <%=f.error_span(:objetivo) %>
  </div>

  <div class="form-group">
    <label class="control-label col-lg-2">N&uacute;mero de Unidades</label>
    <div class="col-lg-10">
      <%= f.number_field :unit, :class => 'form-control' %>
    </div>
    <%=f.error_span(:unit) %>
  </div>

    <div class="form-group">
      <%= f.label 'Carrera', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.select :career_id, set_careers.collect{|c| [c.name, c.id]}, {}, :class => 'form-control' %>
      </div>
      <%=f.error_span(:career_id) %>
    </div>

    <div class="form-group">
      <%= f.label 'Semestre', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.select :semester_id, semesters_currents.collect{|c| [c.grado, c.id]}, {}, :class => 'form-control' %>
      </div>
      <%=f.error_span(:semester_id) %>
    </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                subjects_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
