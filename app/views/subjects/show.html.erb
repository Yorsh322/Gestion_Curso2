<%- model_class = Subject -%>
<div class="page-header">
  <h1><%= @subject.nombre %></h1>
</div>

<h3>Alumnos</h3>
<br/>
<div class="row calificacion">
  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>U1</th>
        <th>U2</th>
        <th>U3</th>
        <th>U4</th>
        <th>U5</th>
        <th>Promedio</th>
        <th>Acciones</th>
      </tr>
      </thead>
      <tbody>
      <% @subject.scores.each_with_index do |s, i| %>
      <tr>
        <td scope="row"><%= i + 1 %></td>
        <td><%= full_name(s.student) %></td>
        <td><%= s.score_one %></td>
        <td><%= s.score_two %></td>
        <td><%= s.score_three %></td>
        <td><%= s.score_four %></td>
        <td><%= s.score_test %></td>
        <td><%= s.score_final %></td>
        <td><%= link_to "Editar Calificaciones", edit_score_path(s), :class => 'btn btn-default btn-xs' %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              subjects_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_subject_path(@subject), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              subject_path(@subject),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
