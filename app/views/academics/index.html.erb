<%- model_class = Academic -%>

<div class="page-header">
  <h1>Contenido de la carga</h1>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Asignatura</th>
      <th>Semestre</th>
      <th>Grupo</th>
      <th>Fecha de creaci&oacute;n</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @academics.each_with_index do |academic, i| %>
      <tr>
        <td scope="row"><%= i + 1 %></td>
        <td><%= academic.catalog.subject.nombre %></td>
        <td><%= academic.semester.grado %></td>
        <td><%= academic.catalog.group.category %></td>
        <td><%= academic.created_at.to_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_academic_path(academic), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      academic_path(academic),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_academic_path,
            :class => 'btn btn-primary' %>