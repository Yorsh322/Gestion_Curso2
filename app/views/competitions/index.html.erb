<%- model_class = Competition -%>
<div class="page-header">
  <h2>Competencias Gen&eacute;ricas a Desarrollar en la Unidad</h2>
</div>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Tema</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= link_to "Detalles por Unidad", competition_path(competition) %></td>
        <td><%= full_topic(competition.content) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_competition_path(competition), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      competition_path(competition),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_competition_path,
            :class => 'btn btn-primary' %>
