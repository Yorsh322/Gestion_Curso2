<%= form_for @student, :html => { :class => "form-horizontal student" } do |f| %>

  <% if @student.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-2">Contrase&ntilde;a</label>
    <div class="col-lg-10">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
    <%=f.error_span(:password) %>
  </div>

  <div class="form-group">
    <%= f.label :control, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :control, :class => 'form-control' %>
    </div>
    <%=f.error_span(:control) %>
  </div>
  <div class="form-group">
    <%= f.label :nombre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nombre) %>
  </div>
  <div class="form-group">
    <%= f.label :apellido, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :apellido, :class => 'form-control' %>
    </div>
    <%=f.error_span(:apellido) %>
  </div>
  <div class="form-group">
    <%= f.label :sexo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :sexo, [['Hombre', 'M'], ['Mujer', 'F']], {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sexo) %>
  </div>
  <div class="form-group">
    <%= f.label 'Semestre', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :semester_id, semesters_currents.collect{|s| [s.grado, s.id]}, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:semester_id) %>
  </div>
  <div class="form-group">
    <%= f.label 'Grupo', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :group_id, set_groups.collect{|g| [g.category, g.id]}, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:group_id) %>
  </div>
  <div class="form-group">
    <%= f.label 'Carrera', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :career_id, set_careers.collect{|c| [c.name, c.id]}, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:career_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                students_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
