<%- model_class = Content -%>
<div class="page-header">
  <h3><%= full_topic(@content) %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Asignatura:</strong></dt>
  <dd><%= @content.summary.subject.nombre %></dd>
</dl>

<hr/>

<h2><small><strong>Fechas de Adquisici&oacute;n</strong></small></h2>

<% if @content.acquisitions.any? %>
  <ul>
    <% @content.acquisitions.each do |acquisition| %>
    <li><%= link_to acquisition.programa, acquisition %></li>
    <% end %>
  </ul>
<% else %>
  <p>No hay Fechas de Adquisici&oacute;n<p>
<% end %>

<%= link_to 'Editar', edit_content_path(@content) %> |
<%= link_to 'Regresar', contents_path %><br/>
<br/>


<%= link_to t('.back', :default => t("helpers.links.back")),
              contents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_content_path(@content), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              content_path(@content),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
