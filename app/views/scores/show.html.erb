<%- model_class = Score -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:score_one) %>:</strong></dt>
  <dd><%= @score.score_one %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_two) %>:</strong></dt>
  <dd><%= @score.score_two %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_three) %>:</strong></dt>
  <dd><%= @score.score_three %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_four) %>:</strong></dt>
  <dd><%= @score.score_four %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_test) %>:</strong></dt>
  <dd><%= @score.score_test %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_final) %>:</strong></dt>
  <dd><%= @score.score_final %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject_id) %>:</strong></dt>
  <dd><%= @score.subject_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @score.student_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              scores_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_score_path(@score), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              score_path(@score),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
