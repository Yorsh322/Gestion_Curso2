<%= form_for @career, :html => { :class => "form-horizontal career" } do |f| %>

  <% if @career.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@career.errors.count, "error") %> prohibited this career from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @career.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Nombre', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label 'Plan de estudio', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :plan, :class => 'form-control' %>
    </div>
    <%=f.error_span(:plan) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                careers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
