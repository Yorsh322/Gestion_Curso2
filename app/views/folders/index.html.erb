<%- model_class = Folder -%>
<div class="page-header">
  <h3>Instrumentaci&oacute;n Did&aacute;ctica para la Formaci&oacute;n y el Desarrollo de Competencias</h3>
</div>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Asignatura</th>
      <th>Docente</th>
      <th>Fecha de Creaci&oacute;n</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.id %></td>
        <td><%= link_to folder.summary.subject.nombre, folder_path(folder) %></td>
        <td><%= full_name(folder.teacher) %></td>
        <td><%= folder.created_at.to_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_folder_path(folder), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      folder_path(folder),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_folder_path,
            :class => 'btn btn-primary' %>
