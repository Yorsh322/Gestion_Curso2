<%- model_class = Acquisition -%>
<div class="page-header">
  <h3>Fechas para adquisici&oacute;n de Competencias (Objetivos educacionales)</h3>
</div>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Tema</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @acquisitions.each do |acquisition| %>
      <tr>
        <td><%= link_to "Detalles por Unidad", acquisition_path(acquisition) %></td>
        <td><%= full_topic(acquisition.content) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_acquisition_path(acquisition), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      acquisition_path(acquisition),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_acquisition_path,
            :class => 'btn btn-primary' %>
