<%- model_class = Calendar -%>
<div class="page-header">
  <h1>Periodo <%= full_period(@calendar) %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Inicia periodo:</strong></dt>
  <dd><%= @calendar.inicia %></dd>
  <dt><strong>Finaliza periodo:</strong></dt>
  <dd><%= @calendar.finaliza %></dd>
  <dt><strong>Periodo:</strong></dt>
  <dd><%= @calendar.period %></dd>
  <dt><strong>A&ntilde;o del periodo:</strong></dt>
  <dd><%= @calendar.year %></dd>
  <dt><strong>Estatus:</strong></dt>
  <dd><%= @calendar.status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              calendars_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_calendar_path(@calendar), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              calendar_path(@calendar),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
