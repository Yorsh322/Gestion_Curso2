<%= form_for @calendar, :html => { :class => "form-horizontal calendar" } do |f| %>

  <% if @calendar.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@calendar.errors.count, "error") %> prohibited this calendar from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @calendar.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Inicio de periodo', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :inicia, :class => 'form-control' %>
    </div>
    <%=f.error_span(:inicia) %>
  </div>
  <div class="form-group">
    <%= f.label ' Fin de periodo', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :finaliza, :class => 'form-control' %>
    </div>
    <%=f.error_span(:finaliza) %>
  </div>
  <div class="form-group">
    <%= f.label 'Periodo', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :period, :class => 'form-control' %>
    </div>
    <%=f.error_span(:period) %>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-2">A&ntilde;o</label>
    <div class="col-lg-10">
      <%= f.text_field :year, :class => 'form-control' %>
    </div>
    <%=f.error_span(:year) %>
  </div>
  <div class="form-group">
    <%= f.label 'Estatus', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :status, [['Actual', true], ['Finalizado', false]], {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                calendars_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
