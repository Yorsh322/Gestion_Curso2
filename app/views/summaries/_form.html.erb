<%= form_for @summary, :html => { :class => "form-horizontal summary" } do |f| %>

  <% if @summary.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@summary.errors.count, "error") %> prohibited this summary from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @summary.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Asignatura', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :subject_id, set_subjects.collect{|s| [s.nombre, s.id]}, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:subject_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                summaries_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
