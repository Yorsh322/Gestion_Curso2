<%- model_class = Source -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fuente) %>:</strong></dt>
  <dd><%= @source.fuente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:didactic) %>:</strong></dt>
  <dd><%= @source.didactic %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content_id) %>:</strong></dt>
  <dd><%= @source.content_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sources_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_source_path(@source), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              source_path(@source),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
