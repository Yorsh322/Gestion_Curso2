<%= form_for @source, :html => { :class => "form-horizontal source" } do |f| %>

  <% if @source.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@source.errors.count, "error") %> prohibited this source from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @source.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-lg-2">Fuentes de Informaci&oacute;n</label>
    <div class="col-lg-10">
      <%= f.text_area :fuente, :class => 'form-control ckeditor' %>
    </div>
    <%=f.error_span(:fuente) %>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-2">Apoyos Did&aacute;cticos</label>
    <div class="col-lg-10">
      <%= f.text_area :didactic, :class => 'form-control ckeditor' %>
    </div>
    <%=f.error_span(:didactic) %>
  </div>
  <div class="form-group">
    <%= f.label 'Unidad', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :content_id, set_contents.collect{|c| [full_topic(c), c.id]}, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:content_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sources_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
