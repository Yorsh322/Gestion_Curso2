<%= form_for @catalog, :html => { :class => "form-horizontal catalog" } do |f| %>

  <% if @catalog.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@catalog.errors.count, "error") %> prohibited this catalog from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @catalog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Asignatura', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :subject_id, set_subjects.collect{|s| [s.nombre, s.id]}, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:subject_id) %>
  </div>
  <div class="form-group">
    <%= f.label 'Grupo', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :group_id, set_groups.collect{|g| [g.category, g.id]}, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:group_id) %>
  </div>
  <div class="form-group">
    <%= f.label 'Semestre', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :semester_id, semesters_currents.collect{|s| [s.grado, s.id]}, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:semester_id) %>
  </div>

    <div class="form-group">
      <%= f.label 'Carrera', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.select :career_id, set_careers.collect{|s| [s.name, s.id]}, {}, :class => 'form-control' %>
      </div>
      <%=f.error_span(:career_id) %>
    </div>

  <div class="form-group">
    <%= f.label 'Agregar a la carga de', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :professor_id, set_professors.collect{|p| [full_name(p.teacher), p.id]}, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:professor_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                catalogs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
