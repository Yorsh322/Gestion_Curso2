<%- model_class = Learning -%>
<div class="page-header">
  <h1>Unidades de Aprendizaje</h1>
</div>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Tema</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @learnings.each do |learning| %>
      <tr>
        <td><%= link_to "Detalles por Unidad", learning_path(learning) %></td>
        <td><%= full_topic(learning.content) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_learning_path(learning), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      learning_path(learning),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_learning_path,
            :class => 'btn btn-primary' %>
