<%- model_class = Learning -%>
<div class="page-header">
  <h1>Actividades de Aprendizaje</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:especifica) %>:</strong></dt>
  <dd><%= @learning.especifica %></dd>
  <dt><strong><%= model_class.human_attribute_name(:actividad) %>:</strong></dt>
  <dd><%= @learning.actividad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:teaching) %>:</strong></dt>
  <dd><%= @learning.teaching %></dd>
  <dt><strong><%= model_class.human_attribute_name(:portafolio) %>:</strong></dt>
  <dd><%= @learning.portafolio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content_id) %>:</strong></dt>
  <dd><%= @learning.content_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              learnings_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_learning_path(@learning), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              learning_path(@learning),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
